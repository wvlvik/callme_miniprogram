@import '/common/common.wxss';


.call-wrapper {
  
}

.call-wrapper .photo-wrap {
  position: relative;
  height: 440rpx;
  width: 100%;
}

.call-wrapper .photo-wrap .faceshow {
  position: absolute;
  bottom: -45rpx;
  width: 140rpx;
  height: 140rpx;
  left: 50%;
  margin-left: -70rpx;
  z-index: 9;
  
}

.photo-wrap .faceshow image  {
  box-sizing: border-box;
  border: 7rpx #fff solid;
  background-color: #fff;
  border-radius: 50%;
  width: inherit;
  height: inherit;
  box-shadow: 0 2px 6px rgba(0, 0, 0, .2);
}

.photo-wrap .faceshow .name {
  text-align: center;
  font-size: 30rpx;
  color: #666;
}

.call-wrapper .photo-wrap image.s {
  width: inherit;
  height: inherit;
}

.callme-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.callme-wrap .des {
  font-size: 44px;
  font-weight: bold;
  width: 650rpx;
}

.callme-btn {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.callme-btn .callme {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 650rpx;
  height: 60px;
  font-size: 40rpx;
  border: none;
  background-color: rgba(255,255,255,0);
  background-image: linear-gradient(-180deg, #17C51E 0%, #00A821 100%);
  border-radius: 8px;
  color: #ffffff;
}

.callme-btn .callme-hover {
  background-image: linear-gradient(-180deg, #008E1C 0%, #008E1C 100%);
}

.callme-btn image {
  width: 22px;
  margin-right: .2em;
}


.links {
  padding-top: 40rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.links navigator, .links button {
  margin: 0 1em;
  font-size: 30rpx;
  color: #4A4A4A;
  background: none;
}

.links button::after {
   display: none; 
}

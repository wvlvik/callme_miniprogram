.no-border {
  border: none;
  padding: 0;
}

.photo-field .photo-ico {
  width: 40px;
  height: 40px;
  opacity: .5;
  z-index: 2;
  position: relative;
}

 .photo-field input {
  display: none;
} 

.photo-field .upload-imagesnap {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.callme-btn {
  margin-top: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.callme-btn .callme {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 650rpx;
  height: 60px;
  font-size: 40rpx;
  background-image: linear-gradient(-180deg, #17C51E 0%, #00A821 100%);
  border-radius: 8px;
  color: #ffffff;
}

.callme-btn .callme::after {
  display: none;
}

.callme-btn .callme-hover {
  background-image: linear-gradient(-180deg, #008E1C 0%, #008E1C 100%);
}

.callme-btn image {
  width: 22px;
  margin-right: .2em;
}

.links {
  font-size: 30rpx;
  color: #4A4A4A;
  padding-top: 40rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.links navigator {
  margin: 0 1em;
}


.userbar-count {
  font-size: 25rpx;
  color: #555;
  text-align: center;
  padding-top: 20rpx;
}


.share-btn {
  margin-top: 40rpx;
  width: 650rpx;
}

.share-btn button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 60px;
  line-height: 60px;
  font-size: 40rpx;
  border-radius: 8px;
}

.share-btn button::after {
  display: none;
}


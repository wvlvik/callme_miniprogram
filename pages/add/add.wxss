@import '/common/common.wxss';

.add-wrapper {
  padding-top: 80rpx;
}

.field-item {
  margin-bottom: 30rpx;
  position: relative;
}

.field-item input {
  border: 1px #D8D8D8 solid;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 8px;
  height: 50px;
  font-size: 18px;
  font-weight: normal;
}

.field-item textarea {
  width: 100%;
  border: 1px #D8D8D8 solid;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-radius: 8px;
  font-size: 18px;
  height: 4.5em;
  font-weight: normal;
}

.field-item picker {
  border: 1px #D8D8D8 solid;
  box-sizing: content-box;
  padding: 0 20rpx;
  border-radius: 8px;
  font-size: 18px;
  font-weight: normal;
}

.field-item .picker {
  width: 100%;
  height: 50px;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
}

.field-item .dropdown-ico {
  position: absolute;
  top: 0;
  right: 30rpx;
  width: 10px;
  height: 100%;
  opacity: .5;
  z-index: 1;
}

.photo-field {
  height: 180px;
  border: 1px #D8D8D8 solid;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

